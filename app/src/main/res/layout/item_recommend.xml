<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_album_item_bg"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <com.liuge.ximalaya.views.RoundRectImageView
        android:layout_width="68dp"
        android:id="@+id/album_cover"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginStart="5dp"
        android:layout_height="65dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="10.5dp"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/album_cover"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/album_title_tv"
            android:layout_marginTop="5dp"
            android:text="拿破仑·希尔《成功学全书》"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14.5dp"
            android:id="@+id/album_description_tv"
            android:layout_marginTop="2.5dp"
            android:text="为你开启成功之路，给你指向未来！一起行动.."
            android:textColor="#ff848484"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10.5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="6dp"
                    android:src="@mipmap/play_info_icon"
                    android:layout_height="6dp"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="234.5万"
                    android:id="@+id/album_play_count"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff848484"

                    android:textSize="7sp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="28.9dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="6dp"
                    android:src="@mipmap/ic_sound"
                    android:layout_height="6dp"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="23集"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/album_content_size"
                    android:textColor="#ff848484"
                    android:textSize="7sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>